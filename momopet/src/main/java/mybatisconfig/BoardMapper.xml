<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.momo.board.mapper.BoardMapper">
<!-- <select id="selectByProdNo" parameterType="string" resultType="Board">
SELECT * FROM product WHERE prod_no= #{prodNo}
</select> -->
<select id="selectAll" parameterType="map" resultType="Board">
SELECT * FROM 
(SELECT rownum rn, a.* 
FROM (SELECT * FROM board ORDER BY board_no ASC) a)
WHERE rn BETWEEN #{startRow} AND #{endRow}
</select>
<select id="count" resultType="int">
SELECT COUNT(*) FROM board
</select>
</mapper>