<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.momo.board.mapper.BoardMapper">

<select id="SelectByBoardNo" parameterType="int" resultType="Board">
SELECT * FROM board WHERE board_no= #{boardNo}
</select>

<select id="selectAll" parameterType="map" resultType="Board">
SELECT * FROM 
(SELECT rownum rn, a.* 
FROM (SELECT * FROM board ORDER BY board_no ASC) a)
WHERE rn BETWEEN #{startRow} AND #{endRow}
</select>
<select id="count" resultType="int">
SELECT COUNT(*) FROM board
</select>
</mapper>