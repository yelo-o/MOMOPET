<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <settings>
    <setting name="mapUnderscoreToCamelCase" value="true"/>
  </settings>
  <typeAliases>
    <typeAlias type="com.momo.customer.dto.Customer" alias="Customer"/>
    <typeAlias type="com.momo.board.dto.Board" alias="Board"/>
    <typeAlias type="com.momo.review.dto.Review" alias="Review"/>
    <!-- <typeAlias type="com.momo.customer.dto.history" alias="History"/> -->
  </typeAliases>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="oracle.jdbc.OracleDriver"/>
        <!-- ★ 집에서 테스트 할 때는 마이바티스 아래 3개만 바꾸면 된다. -->
        <property name="url" value="jdbc:oracle:thin:@localhost:1522/xe"/>
        <!-- <property name="url" value="jdbc:oracle:thin:@192.168.0.40:1521/xe"/> -->
        <property name="username" value="scott"/>
        <property name="password" value="tiger"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="/mybatisconfig/CustomerMapper.xml"/>
    <mapper resource="/mybatisconfig/BoardMapper.xml"/>
    <mapper resource="/mybatisconfig/ReviewMapper.xml"/>
   <!--  <mapper resource="/mabatisconfig/HistoryMapper.xml"/> -->
  </mappers>
</configuration>